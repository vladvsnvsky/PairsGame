<UserControl x:Class="Tema1.ImageSelectorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tema1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid Margin="0,0,0,65">
        <Image Name="CurrentImageSelected" HorizontalAlignment="Left" Height="200" Width="200" VerticalAlignment="Top" />
        <Button Name="BackButton" Content="Back" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" FontSize="20" FontFamily="Bahnschrift Light" Margin="0,205,0,0" Click="BackButton_Click"/>
        <Button Name="NextButton" Content="Next" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" FontSize="20" FontFamily="Bahnschrift Light" Margin="125,205,0,0" Click="NextButton_Click"/>

    </Grid>
</UserControl>
